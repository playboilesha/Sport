<div class="divComment">

    @foreach (var comment in ViewBag.Comments)
    {

        <div class="card1 ">
            <div class="cardHeader d-flex justify-content-between">

                <a>@comment.UserName</a> @if (role == "admin")
                {
                    <form method="post" asp-controller="Coach" asp-route-id="@comment.Id" asp-route-isa="@ViewBag.TrainerId" asp-action="DeleteComment">
                        <button id="delete" type="submit" class="btn btn-outline-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"></path>
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"></path>
                            </svg>

                        </button>
                    </form>
                }
            </div>

            <div class="cardBody">
                <p>@comment.Comments</p>
            </div>
            <div class="cardFooter ">

                @comment.CreatedAt
            </div>
        </div>
    }

    <br />
    @if (User.Identity.IsAuthenticated)
    {
        <form method="post" asp-controller="Coach" asp-route-id="@ViewBag.TrainerId" asp-action="AddComment">
            <input type="hidden" asp-for="UserName" value="@User.Identity.Name" required><br>
            <hr />
            <textarea class="question" asp-for="Comments" id="msg" required></textarea>
            <label for="msg"><span>Напишите ваш комментарий</span></label>
            <hr />

            <input type="submit" value="Отправить" />
        </form>
    }
            else
