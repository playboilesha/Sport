@{
    Layout = "~/Views/Shared/_LoginRegister.cshtml";
}

@model Sport.ViewModels.LoginViewModel
<body class="text">
    <div id="stars"></div>
    <div id="stars2"></div>
    <div id="stars3"></div>
    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        <h6 class="mb-0 pb-3 text"><span class="text">Log In </span><span class="text"> <a class="text" asp-controller="Account" asp-action="Register">Sign Up</a></span></h6>



                        <div class="card-3d-wrap mx-auto">

                            <div class="card-front">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3 text">Log In</h4>



                                        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                                            <div asp-validation-summary="ModelOnly"></div>
                                            <div class="form-group">

                                                <input id="emaill" asp-for="Email" type="email" class="form-style" placeholder="Email">
                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input id="passwordd" asp-for="Password" type="password" class="form-style" placeholder="Password">
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>

                                            <input type="submit" id="inp" value="Login" class="btn mt-4" />
                                        </form>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


