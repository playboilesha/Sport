@model IEnumerable<Sport.Models.Klub>

@{
    Layout = "~/Views/Shared/_Menu.cshtml";
}




<head>
    <!-- заголовок страницы -->

    <!-- настраиваем служебную информацию для браузеров -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- загружаем Бутстрап -->

    <style type="text/css">
        img {
            max-width: 100%;
            max-height: 100%;
        }

        h1 {
            font-size: 50px;
            margin-top: 30px;
            margin-bottom: 20px;
        }

        h2 {
            margin-top: 40px;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
        }
    </style>
</head>

<body>
    @foreach (var item in Model)
    {
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <h1>@item.Name</h1>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <p>
                        @item.About
                    </p>
                    <p>
                        Год создания клуба - @item.Year.
                    </p>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <img src="/Sport_emblem.jpg">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2>Карта сайта:</h2>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                    <p><a asp-controller="Sports" asp-action="Skate">Скейт</a></p>
                    <p><a asp-controller="Sports" asp-action="Fitness">фитнесс</a></p>
                    <p><a asp-controller="Sports" asp-action="Box">бокс</a></p>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                    <p><a asp-controller="Hall" asp-action="Hall">Залы</a></p>
                    <p><a asp-controller="Coach" asp-action="Coach">Тренера</a></p>
                
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2>Контакты для связи</h2>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p>Телефон: @item.Telephone</p>
                    <p>Почта: <a >@item.Email</a></p>
                    <p>Vk:<a href="@item.Vk"> @item.Vk_name</a></p>
                   
                </div>
            </div>
        </div>
    }
</body>
<!-- конец всей страницы -->

